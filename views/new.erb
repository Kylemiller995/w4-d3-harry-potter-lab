<form method="post" action="/students">

  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  />

  <label for="second-name-field">Second Name:</label>
  <input
  type="text"
  name="second_name"
  id="second-name-field"
  />

  <label for="house_id">Select a house:</label>
  <select name="house_id" id="house_id-selection">
    <% for house in @houses do %>
    <option value="<%=house.id%>"><%=house.name%></option>
    <%end%>
  </select>

  <label for="age-field">Age:</label>
  <input
  type="number"
  name="age"
  id="age-field"
  />

  <input type="submit" value="Add Student">
</form>
